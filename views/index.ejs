<!DOCTYPE html>
<html lang="en">
  <head>
    <title>COSS Stats</title>
    <meta charset="utf-8">
    <meta name="description"  content="COSS Statistics">
    <meta name="author"       content="Tundra Fizz">
    <link rel="shortcut icon" href="/img/icon.jpg">
    <link rel="stylesheet"    href="/css/theme.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="/js/index.js"></script>
    <script>var nextEthBlock ="<%= nextEthBlock  %>"</script>
    <script>var weeklyRewards="<%= weeklyRewards %>"</script>
    <script>var volumeHistory="<%= volumeHistory %>"</script>
    <script>
      console.log("===================================");
      console.log(nextEthBlock);
      console.log(weeklyRewards);
      console.log(volumeHistory);
      console.log("===================================");
    </script>
  </head>

  <body>
    <div class="container">
      <div class="volume-history">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Hour</th>
              <th>Volume</th>
            </tr>
          </thead>
          <tbody class="vh"></tbody>
        </table>
      </div>
    </div>

    <div class="container next-eth-block">
      <div class="data">
        <div class="days"></div>
        <div class="colon"></div>
        <div class="hours"></div>
        <div class="colon"></div>
        <div class="minutes"></div>
        <div class="colon"></div>
        <div class="seconds"></div>
      </div>
      <div class="labels">
        <div class="days">DAYS</div>
        <div class="hours">HOURS</div>
        <div class="minutes">MINUTES</div>
        <div class="seconds">SECONDS</div>
      </div>
    </div>

    <div class="container">
      <div class="weekly-rewards">
        <table>
          <thead>
            <tr>
              <th>ETH Block</th>
              <th>Date</th>
              <th>Volume</th>
              <th>USD per COSS</th>
              <th>Avg Fee %</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < weeklyRewards.length; i++){ %>
              <tr>
                <td><a href="https://etherscan.io/block/<%=weeklyRewards[i]['ethBlock']%>" target="_blank"><%= weeklyRewards[i]["ethBlock"] %><span class="aaa"></span></a></td>
                <td><%= weeklyRewards[i]["date"]     %></td>
                <td><%= weeklyRewards[i]["volume"]   %></td>
                <td><%= weeklyRewards[i]["value"]    %></td>
                <td><%= weeklyRewards[i]["fee"]      %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="container">
      <div class="totals">
        <table>
          <thead></thead>
          <tbody>
            <tr>
              <td>FSA Value</td>
              <td class="fsa-value">$0.00</td>
            </tr>
            <tr>
              <td>Net Value</td>
              <td class="net-value">$0.00</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="container">
      <div class="fsa-stats">
        <table>
          <thead>
            <tr>
              <th>Token</th>
              <th>Remaining</th>
              <th>FSA Value</th>
              <th>Fee</th>
              <th>Net Value</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>

      <div class="delete">Clear Data</div>

      <div class="dropzone">
        <div>Drag and drop your Total_Fee_Split_Allocation.csv here</div>
      </div>
    </div>
  </body>
</html>
